{
    "name": "snes-ref-extension",
    "displayName": "snes_ref_extension",
    "description": "This extension adds references for 65816, GSU, and SPC700 opcodes as code hovering",
    "author": "Summers Pittman",
    "publisher": "secondsun",
    "license": "LGPLv3",
    "repository": {
        "type": "git",
        "url": "https://github.com/secondsun/retro-lsp"
    },
    "version": "0.0.1",
    "engines": {
        "vscode": "^1.50.0"
    },
    "categories": [
        "Programming Languages"
    ],
    "activationEvents": [
        "onLanguage:snesasm"
    ],
    "main": "./out/client/src/extension",
    "contributes": {
        "languages": [
            {
                "id": "snesasm",
                "aliases": [
                    "Retro Assembly",
                    "snesasm"
                ],
                "extensions": [
                    ".s",
                    ".sgs",
                    ".s700"
                ],
                "configuration": "./language-configuration.json"
            }
        ],
        "grammars": [
            {
                "language": "snesasm",
                "scopeName": "source.retro",
                "path": "./syntaxes/snesasm.tmLanguage.json"
            }
        ],
        "configuration": {
            "title": "Retro ref configuration",
            "properties": {
                "snesasm.trace.server": {
                    "scope": "window",
                    "type": "string",
                    "enum": [
                        "off",
                        "messages",
                        "verbose"
                    ],
                    "default": "verbose",
                    "description": "Traces the communication between VSCode and the language server."
                }
            }
        }
    },
    "scripts": {
        "vscode:prepublish": "cd client && npm run update-vscode && cd .. && npm run compile",
        "compile": "tsc -b",
        "watch": "tsc -w -b",
        "postinstall": "cd client && npm install && cd .."
    },
    "dependencies": {
        "vscode-languageclient": "^6.1.3"
    },
    "devDependencies": {
        "@types/mocha": "^8.0.3",
        "@types/node": "^14.14.6",
        "typescript": "^4.0.5"
    }
}
